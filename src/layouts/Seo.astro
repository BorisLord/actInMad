---
import { SEO, type Props } from "astro-seo";

export const defaultSeo: Props = {
  title: "Act In Mad",
  titleTemplate: " - Act In Mad",
  description:
    "Venez decouvrir le theatre, en cours, ou sur scene avec Act In Mad.",
  canonical: "https://actinmad.art/",
  charset: "UTF-8",
  languageAlternates: [
    {
      href: "https://actinmad.art/",
      hrefLang: "fr",
    },
  ],
  openGraph: {
    basic: {
      title: "Venez decouvrir Act In Mad",
      type: "website",
      image: "./assets/actInMadRed.svg",
      url: "https://actinmad.art/",
    },
    optional: {
      siteName: "Act In Mad",
      description: "L'ecole de theatre qui vous transcende",
      locale: "fr_FR",
    },
    image: {
      secureUrl: "https://example.com/og-image-secure.jpg",
      type: "image/svg",
      width: 1200,
      height: 1200,
      alt: "Le logo de la compagnie Act In Mad",
    },
  },
};

const seo = { ...defaultSeo, ...Astro.props };
---

<SEO {...seo} />

