---
import { SEO, type Props } from "astro-seo";

export const defaultSeo: Props = {
  title: "Act In Mad",
  description:
    "Discover amazing performances and acting techniques with Act In Mad.",
  canonical: "https://example.com/",
  noindex: false,
  nofollow: false,
  languageAlternates: [
    {
      href: "https://example.com/fr",
      hrefLang: "fr",
    },
    {
      href: "https://example.com/es",
      hrefLang: "es",
    },
  ],
  openGraph: {
    basic: {
      title: "Act In Mad",
      type: "website",
      image: "https://example.com/og-image.jpg",
      url: "https://example.com/",
    },
    optional: {
      siteName: "Act In Mad",
      description: "A site about great performances.",
    },
    image: {
      url: "https://example.com/og-image.jpg",
      secureUrl: "https://example.com/og-image-secure.jpg",
      type: "image/jpeg",
      width: 1200,
      height: 630,
      alt: "A descriptive alt text for the image.",
    },
  },
  twitter: {
    card: "summary_large_image",
    site: "@ActInMad",
    creator: "@creator_handle",
    title: "Act In Mad",
    description: "Discover the art of acting with Act In Mad.",
    image: "https://example.com/twitter-image.jpg",
    imageAlt: "An amazing performance.",
  },
  extend: {
    link: [{ rel: "stylesheet", href: "https://example.com/custom-style.css" }],
    meta: [
      {
        name: "twitter:image",
        content: "https://example.com/twitter-image.jpg",
      },
      {
        name: "twitter:title",
        content: "Act In Mad - Performances",
      },
    ],
  },
  surpressWarnings: true,
};

const seo = { ...defaultSeo, ...Astro.props };
---

<SEO {...seo} />

