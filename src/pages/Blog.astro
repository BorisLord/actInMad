---
import Layout from '../layouts/Layout.astro';
import PocketBase from 'pocketbase';
import { API_URL } from 'astro:env/client';

const pb = new PocketBase(API_URL);
const records = await pb.collection('articles').getFullList({});
console.log('IIIII222222222222222', API_URL);
---

<Layout>
  <div
    class="flex flex-col items-center justify-center min-h-screen bg-madBack p-4"
  >
    <div class="grid grid-cols-2 gap-4 max-w-4xl">
      {
        records.length === 0 ? (
          <div class="w-full text-center text-gray-500 py-8">
            Les articles arrivent bientôt
          </div>
        ) : (
          records.map((article) => (
            <a
              href={`/articles/${article.slug}`}
              class="block bg-white shadow-lg rounded-lg p-4 text-center hover:shadow-xl transition"
            >
              <h2 class="text-lg font-bold text-gray-800">{article.Title}</h2>
              <p class="text-sm text-gray-500">
                Écrit par {article.writter || 'Auteur anonyme'}
              </p>
              {article.images.length > 0 ? (
                <img
                  src={`${API_URL}/api/files/articles/${article.id}/${article.images[0]}`}
                  alt={article.Title}
                  class="w-full h-48 object-cover mt-2 rounded-md"
                />
              ) : (
                <div class="w-full h-48 flex items-center justify-center bg-gray-200 text-gray-500 mt-2 rounded-md">
                  Pas d'image
                </div>
              )}
            </a>
          ))
        )
      }
    </div>
  </div>
</Layout>
